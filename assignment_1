#part 1 _ assignment 1

pollutantmean <- function(specdata, pollutant, id = 1:332) { #the hardest function ever until the next
        data = integer(length=0) #define the data as numeric
        for (i in id) { #conditional begins!
                read = read.csv(paste(specdata, "/", formatC(i, width = 3, flag ="0"), ".csv", sep = "")) #specdata is the directory to concatenate the files
                data = c(data, read[[pollutant]])
        }
        return(round(mean(data, na.rm = TRUE), digits = 3)) #returns giving mean without NA and with 3 decimals
}
